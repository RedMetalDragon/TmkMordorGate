{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "TmkMordorGate.Config": "Debug"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:4430"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "routeFace": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "/"
        }
      },
      "routeNonApi": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "{**catch-all}",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ],
          "Hosts": [
            "*"
          ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/"
          }
        ]
      },
      "routeCore": {
        "ClusterId": "coreApi",
        "Match": {
          "Path": "/api/v1/brain/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/{**catch-all}"
          }
        ]
      },
      "routePayments": {
        "ClusterId": "paymentApi",
        "Match": {
          "Path": "/api/v1/gondor/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/v1/gondor"
          }
        ]
      },
      "routeAi": {
        "ClusterId": "gandalf",
        "Match": {
          "Path": "/api/v1/gandalf/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/{**catch-all}"
          }
        ]
      },
      "routeNotifications": {
        "ClusterId": "gwaihir",
        "Match": {
          "Path": "/api/v1/gwaihir/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/{**catch-all}"
          }
        ]
      },
      "routeFilesService": {
        "ClusterId": "filesService",
        "Match": {
          "Path": "/api/v1/gondorbox/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "frontend": {
        "LoadBalancingPolicy": "LocalOrDocker",
        "Destinations": {
          "destinationFace-docker": {
            "Address": "http://frontend:80"
          },
          "destinationFace-local": {
            "Address": "http://localhost:3000"
          }
        }
      },
      "coreApi": {
        "LoadBalancingPolicy": "LocalOrDocker",
        "Destinations": {
          "destinationCore-docker": {
            "Address": "http://backend:3001"
          },
          "destinationCore-local": {
            "Address": "http://localhost:3001"
          }
        }
      },
      "paymentApi": {
        "LoadBalancingPolicy": "LocalOrDocker",
        "Destinations": {
          "destinationPayment-docker": {
            "Address": "http://backend-payment:8080"
          },
          "destinationPayment-local": {
            "Address": "http://localhost:5192"
          }
        }
      },
      "gandalf": {
        "LoadBalancingPolicy": "LocalOrDocker",
        "Destinations": {
          "destinationGandalf-docker": {
            "Address": "http://ai-service:5200"
          },
          "destinationGandalf-local": {
            "Address": "http://127.0.0.1:5000"
          }
        }
      },
      "gwaihir": {
        "LoadBalancingPolicy": "LocalOrDocker",
        "Destinations": {
          "destinationGwaihir-docker": {
            "Address": "http://notification-service:3000"
          },
          "destinationGwaihir-local": {
            "Address": "http://127.0.0.1:3000"
          }
        }
      },
      "filesService": {
        "LoadBalancingPolicy": "LocalOrDocker",
        "Destinations": {
          "destinationFilesService-docker": {
            "Address": "http://s3-file-service:3002"
          },
          "destinationFilesService-local": {
            "Address": "http://127.0.0.1:3002"
          }
        }
      }
    }
  }
}