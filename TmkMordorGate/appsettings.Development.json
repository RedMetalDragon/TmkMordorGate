{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "routeFace": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "/"
        }
      },
      "routeNonApi": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "{**catch-all}",
          "Methods": [ "GET", "POST", "PUT", "DELETE"],
          "Hosts": [ "*" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/"
          }
        ]
      },
      "routeCore": {
        "ClusterId": "coreApi",
        "Match": {
          "Path": "/api/v1/brain/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/{**catch-all}"
          }
        ]
      },
      "routePayments": {
        "ClusterId": "paymentApi",
        "Match": {
          "Path": "/api/v1/gondor/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/v1/gondor"
          }
        ]
      }
    },
    "Clusters": {
      "frontend": {
        "Destinations": {
          "destinationFace": {
            "Address": "http://localhost:3000"
          }
        }
      },
      "coreApi": {
        "Destinations": {
          "destionationCore": {
            "Address": "http://localhost:3001"
          }
        }
      },
      "paymentApi": {
        "Destinations": {
          "destinationPayment": {
            "Address": "http://localhost:5192"
          }
        }
      }
    }
  }
}