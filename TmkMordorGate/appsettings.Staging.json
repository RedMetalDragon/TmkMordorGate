{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://*:443",
        "Certificate": {
          "Path": "/etc/certs/fullchain.pem",
          "KeyPath": "/etc/certs/privkey.pem"
        }
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "routeFace": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "/"
        }
      },
      "routeNonApi": {
        "ClusterId": "frontend",
        "Match": {
          "Path": "{**catch-all}",
          "Methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ],
          "Hosts": [
            "*"
          ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/"
          }
        ]
      },
      "routeCore": {
        "ClusterId": "coreApi",
        "Match": {
          "Path": "/api/v1/brain/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/{**catch-all}"
          }
        ]
      },
      "routePayments": {
        "ClusterId": "paymentApi",
        "Match": {
          "Path": "/api/v1/gondor/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/v1/gondor"
          }
        ]
      }
    },
    "Clusters": {
      "frontend": {
        "Destinations": {
          "destinationFace": {
            "Address": "http://frontend:80"
          }
        }
      },
      "coreApi": {
        "Destinations": {
          "destinationCore": {
            "Address": "http://backend:3001"
          }
        }
      },
      "paymentApi": {
        "Destinations": {
          "destinationPayment": {
            "Address": "http://backend-payment:8080"
          }
        }
      }
    }
  }
}